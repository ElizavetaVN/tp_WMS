@model IEnumerable<Domain.Entities.Partners>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-controller="Partners" asp-action="Create">Create</a>
</p>
<table class="table" >
    <tbody>
        <tr>
            <th>
                Наименование
            </th>
            <th>
                ИНН
            </th>
            <th>
                КПП
            </th>
            <th>
                Адрес

            <th>
                Телефон
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Статус
            </th>
            <th></th>
        </tr>
        </thead>
<tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.INN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KPP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActuallAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-controller="Partners" asp-action="Update" asp-route-Id="@item.Id">Update</a>
                @if (@item.Status == false)
                {
                    <a class="btn btn-sm btn-primary" asp-controller="Partners" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
