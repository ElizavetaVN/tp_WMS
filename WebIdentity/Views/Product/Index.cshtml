@model IEnumerable<Domain.Entities.Products>

@{
    ViewData["Title"] = "Index";
}

<h1>Номенклатура</h1>

<p>
    <a class="btn btn-primary" asp-controller="Product" asp-action="Create">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Наименование
            </th>
            <th>
                Единицы измерения
            </th>
            <th>
                Поставщик
            </th>
            <th>
                Артикул
            </th>
            <th>
                Статус
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Units.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provider.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-controller="Product" asp-action="Update" asp-route-Id="@item.Id">Update</a>
                @if (@item.Status == false)
                {
                    <a class="btn btn-sm btn-primary" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
